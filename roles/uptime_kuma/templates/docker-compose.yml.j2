# based on https://github.com/louislam/uptime-kuma/blob/master/docker/docker-compose.yml
version: '3.3'

services:
  uptime-kuma:
    image: louislam/uptime-kuma:1
    container_name: uptime-kuma
    volumes:
      - ./uptime-kuma-data:/app/data
    ports:
      - {{ uptime_kuma_host_port }}:{{ uptime_kuma_container_port }}  # <Host Port>:<Container Port>
    restart: always